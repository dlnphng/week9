{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 500,
  "title": "Top Global Exporters and Importers of Ore and Metals",
  "projection": {
    "type": "equalEarth"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/dlnphng/3179-week9/main/js/ne_110m_admin_0_countries.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "darkgray"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/dlnphng/week9/main/data/Country.csv"
      },
      "mark": {
        "type": "circle",
        "tooltip": {
          "content": "data"
        }
      },
      "encoding": {
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "size": {
          "field": "Percentage of Total Ore and Metal Revenue (%)",
          "type": "quantitative",
          "title": "% of Total Ore and Metal Revenue",
          "scale": {
            "domain": [0, 100],
            "range": [0, 3000]
          }
        },
        "color": {
          "field": "Type",
          "type": "nominal",
          "title": "Revenue Type (Export/Import)",
          "scale": {
            "domain": ["Export", "Import"],
            "range": ["#FF6600", "#0066CC"]
          }
        }
      }
    }
  ]
}
